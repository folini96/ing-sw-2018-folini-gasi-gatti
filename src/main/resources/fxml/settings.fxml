<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="275.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.se2018.classes.view.SettingsController">
    <children>
        <VBox alignment="CENTER" layoutX="70.0" layoutY="85.0" prefHeight="105.0" prefWidth="160.0">
            <children>
                <Label prefHeight="17.0" prefWidth="160.0" text="Tipo connessione:" textAlignment="CENTER">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="connectionComboBox" prefWidth="160.0">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin></ComboBox>
            <Label prefHeight="17.0" prefWidth="160.0" text="Server IP address:" textAlignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField fx:id="serverIPTextField" />
                <Button fx:id="confirmButton" mnemonicParsing="false" onAction="#confirmButtonClicked" text="Inizia">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</Pane>
